{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "../common/src/"],
  "ts-node": {
    "swc": true
  }
}
