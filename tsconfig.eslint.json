{
  "extends": ["./tsconfig.json"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@common/*": [ "./common/src/*" ]
    }
  },
  "include": [
    "common/src/**/*.ts",
    "ai-player/src/**/*.ts",
    "eslint.config.mjs"
  ]
}
